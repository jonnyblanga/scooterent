<%= @query %>
<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<div class="card-container col-md-12">
  <div class="row">
  <% if @scooters.size > 0 %>
  <% @scooters.each do |scooter| %>
    <div class="col-md-4 contenitor">
      <% if scooter.image.present? %>
      <%= link_to scooter_path(scooter) do %>
      <%= cl_image_tag(scooter.image, class: "image") %>
      <div class="overlay">
        <div class="text">
          <h2 class="landingpage-cards-brand"><%= scooter.make %> </h2>
          <h2 class="landingpage-cards-model"><%= scooter.model %> </h2>
          <h2 class="landingpage-cards-price"><%= "$#{scooter.price}" %> </h2>
        </div>
      </div>
      <% end %>
      <% end %>
    </div>
  <% end %>
  <% else %>
    <h1>No scooters available in your area :(</h1>
  <% end %>
  </div>
</div>
