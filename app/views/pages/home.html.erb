
<div class="banner">
  <div class="navbar-landingpage">
    <%= render 'shared/navbar' %>
  </div>
  <div class="container">
    <div class="info">
      <h1>ScooteRent!</h1>
      <p>Way better than a rental company</p>
      <%= link_to scooters_path do %>
      <button class="btn btn-success" >Filter!</button>
      <% end  %>
    </div>
  </div>
</div>

<div class="about-us">

  <div class="about-title">
    <h1>Skip the rental counter</h1>
  </div>

  <div class="info-about-us">

    <div class="part-one">
      <h3>THE SCOOTER YOU WANT</h3>
      <p>Choose from over 800 unique makes and models, from affordable daily scooters to rare specialty motorcycles.</p>
    </div>

    <div class="part-dwo">
      <h3>WHERE YOU WANT IT</h3>
      <p>Pick up the scooter or get it delivered, wherever you need it, up to 35% less than traditional agencies.</p>
    </div>

  </div>

</div> <!-- chiude il div about-us -->

<div class="divider"></div>

<div class="our-offers">
  <h3>Some Cool scooters to rent</h3>
</div>

<div class="card-container col-md-12">
  <div class="row">
  <% @scooters_rand.each do |scooter_rand| %>
    <div class="col-md-4 contenitor">
      <% if scooter_rand.image.present? %>
      <%= link_to scooter_path(scooter_rand) do %>
      <%= cl_image_tag(scooter_rand.image, class: "image") %>
      <div class="overlay">
        <div class="text">
          <h2 class="landingpage-cards-brand"><%= scooter_rand.make %> </h2>
          <h2 class="landingpage-cards-model"><%= scooter_rand.model %> </h2>
          <h2 class="landingpage-cards-engine"><%= scooter_rand.engine %> </h2>
        </div>
      </div>
      <% end %>
      <% end %>
    </div>
  <% end %>
  </div>


<div class="divider"></div>

  <div class="divider"></div>
  <div class="footer">
    <div class="footer-links">
      <a href="#"><i class="fab fa-github"></i></a>
      <a href="#"><i class="fab fa-instagram"></i></a>
      <a href="#"><i class="fab fa-facebook"></i></a>
      <a href="#"><i class="fab fa-twitter"></i></a>
      <a href="#"><i class="fab fa-linkedin"></i></a>
    </div>
    <div class="footer-copyright">
      This footer is made with <i class="fas fa-heart"></i> at Le Wagon
    </div>
  </div>
</div>





